<Window x:Class="DicomTagChecker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="560" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <ContentControl prism:RegionManager.RegionName="ContentRegion" />
        <TextBlock Text="監視対象フォルダ：" Height="25" Width="105" Margin="0,20,410,16"/>
        <TextBox Text="{Binding FolderPath}" Height="25" Width="380" TextWrapping="NoWrap" Margin="60,16,0,16"/>
        <Button Content="..." Height="20" Width="25" Margin="490,22,10,16"/>

        <TextBlock Grid.Row="1" Text="ログ" Height="25" Width="20" Margin="0,0,490,220"/>
        <ListBox Grid.Row="1" Height="160" Width="510" Margin="0,5,0,45"/>
        <Button Content="取込開始" Grid.Row="1" Height="30" Width="60" Margin="450,190,0,25"/>

        <StatusBar Grid.Row="1" VerticalAlignment="Bottom">
            <Label Content="test"/>
        </StatusBar>
    </Grid>
</Window>
